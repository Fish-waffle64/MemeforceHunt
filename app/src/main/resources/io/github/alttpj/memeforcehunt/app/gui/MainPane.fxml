<?import io.github.alttpj.memeforcehunt.app.gui.main.ItemSkinList?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="io.github.alttpj.memeforcehunt.app.gui.MainPane"
      styleClass="background"
      spacing="5"
>
  <padding>
    <Insets top="5" right="5" bottom="5" left="5"/>
  </padding>
  <stylesheets>
    <URL value="@borders.css"/>
  </stylesheets>

  <TabPane HBox.hgrow="ALWAYS">
    <padding>
      <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>
    <tabs>
      <Tab text="Default Sprites" closable="false">
        <ItemSkinList fx:id="defaultSpritesItemSkinList"/>
      </Tab>
      <Tab text="Roll your own" closable="false" disable="true">


      </Tab>
      <Tab text="Repository" closable="false" disable="true">

      </Tab>
    </tabs>
  </TabPane>

  <VBox HBox.hgrow="SOMETIMES" spacing="5" minWidth="180" alignment="BOTTOM_LEFT">
    <padding>
      <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>
    <Button text="Patch" VBox.vgrow="NEVER" maxWidth="Infinity"/>
    <Button text="Random" VBox.vgrow="NEVER" maxWidth="Infinity"/>
  </VBox>

</HBox>
